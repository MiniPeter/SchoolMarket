<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_item"
    android:layout_width="match_parent"
    android:layout_marginLeft="6dp"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="6dp"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/more_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textColor="@color/md_red_500"
        android:text="@string/more_item_msg_title"
        android:maxLines="1"
        android:textSize="@dimen/font_size_catalog" />

    <TextView
        android:id="@+id/more_item_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp"
        android:text="@string/more_item_msg_content"
        android:ellipsize="end"
        android:textColor="@color/text_color"
        android:maxLines="3"
        android:textSize="@dimen/font_size_normal" />

    <TextView
        android:id="@+id/more_item_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:textColor="#757575"
        android:text="@string/more_item_msg_time"
        android:textSize="@dimen/font_size_normal" />

</LinearLayout>